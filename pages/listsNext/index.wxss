page {
    height: 100%;
}

.containerd {
    height: 100%;
    width: 100%;
    background: #efefef;
}

.head {
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    background: #e5e5e5;
    position: relative;
    text-align: center;
	
}

.head image {
    width: 40rpx;
    height: 40rpx;
	padding:20rpx;
    position: absolute;
    right: 40rpx;
    top:0;
	font-size:0;
	vertical-align: top;
}
.head text {
    font-size: 12pt;
}
.pop{	
	background:#595959;
	padding:10rpx;
	position:absolute;
	right:34rpx;
	bottom:-220rpx;
	 color:#fff; 
}
.pop text{
	display:block;
	height:50rpx;
	line-height: 50rpx;
	font-size:10pt;
	
}
.active{
	background:#EFEFEF;
	color:#F99905;
}
.check{
	color:#F99905;
}

.modules {
    /* background: #fff; */
    width: 750rpx;
}

.nav {
    width: 690rpx;
    padding: 0 30rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
}

.nav text {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 12rpx;
    font-size: 12pt;
}

.auto {
    width: 90%;
    margin: 0 auto;
}

navigator:hover {
    background: none;
}

.modBox {
    width: 94%;
    margin: 0 auto;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}

.pro-list {
    width: 42%;
    float: left;
    padding: 2% 3% 3% 3%;
    border: 2rpx solid #e5e5e5;
    background: #fff;
    margin-top: 10rpx;
}

.pro-list navigator image {
    width: 100%;
}

.pro-list .pro-name {
    font-size: 11pt;
    color: #666;
    margin: 0 5%;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

