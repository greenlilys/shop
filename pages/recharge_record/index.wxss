page {
    background: #efefef;
}
.recharge_record{
    width: 100%;
    height:120rpx;
    background: #FFF;
    margin: 20rpx 0 0 0;
}
.recharge_record_left{
    width: 50%;
    height: 100rpx;
    font-size: 12pt;
    color: #999;
    float: left;
    margin:10rpx 0 0 40rpx;
}
.recharge_record_left text{
    display: block;
    margin-top: 10rpx;
}
.recharge_record_right{
    width:25%;
    height:80rpx;    
    float: right;    
    border-left: 2rpx #ddd solid;
    margin-top:25rpx;
}
.recharge_record_right text{
    font-size: 12pt;
    line-height:80rpx;
    text-align: center;
    color: #999;
    float: right;
    margin-right:40rpx; 
}