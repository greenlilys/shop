page {
    background: #efefef;
}

.comment_top {
    width: 100%;
    height: 220rpx;
    background: #fff;
    margin: 20rpx 0;
}

.comment_tops {
    width: 90%;
    margin: 0 auto;
    height: 150rpx;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #ddd;
}

.comment_tops_l {
    width: 150rpx;
    height: 150rpx;
    float: left;
}

.comment_tops_l image {
    width: 150rpx;
    height: 150rpx;
}

.comment_tops_c {
    width: 40%;
    float: left;
    margin: 20rpx 0 0 40rpx;
}

.comment_tops_c text {
    display: block;
    font-size: 11pt;
    margin: 10rpx 0 20rpx 0;
}

.comment_tops_c .comment_tops_title {
    font-size: 13pt;
    color: #333;
}

.comment_tops_r {
    float: right;
    margin-top: 10rpx;
}

.comment_tops_r text {
    display: block;
    text-align: right;
    font-size: 12pt;
    color: #666;
    margin-top: 15rpx;
}

.comment_center {
    width: 100%;
    background: #fff;
    padding-bottom: 20rpx;
}

.comment_center_t {
    width: 90%;
    height: 100rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #ddd;
}

.comment_center_t .comment_center_tl {
    width: 50rpx;
    height: 50rpx;
    float: left;
    margin: 30rpx 20rpx 0 0;
}

.comment_center_t .comment_center_tc {
    float: left;
}

.comment_center_t .comment_center_tc image {
    width: 80rpx;
    height: 80rpx;
    float: left;
    margin-top: 10rpx;
}

.comment_center_tr {
    float: left;
    margin: 25rpx 0 0 20rpx;
}

.comment_center_tr text {
    font-size: 11pt;
    color: #fff;
    background: #bd051b;
    padding: 6rpx 15rpx;
    border-radius: 10rpx 10rpx;
}

.comment_center_c {
    width: 90%;
    height: 180rpx;
    margin: 20rpx auto;
    border: 2rpx solid #ddd;
    border-radius: 10rpx 10rpx;
}

.comment_center_c input {
    font-size: 11pt;
    margin: 10rpx 0 0 20rpx;
}

.comment_center_f {
    width: 90%;
    margin: 0 auto;
    border: 2rpx solid #ddd;
    border-radius: 10rpx 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    box-sizing: border-box;
    align-items: center;
}

.uplodeImg {
    width: 150rpx;
    height: 150rpx;
    padding: 8rpx;
    position: absolute;
    z-index: 10;
}

.imgBox {
    position: relative;
    width: 166rpx;
    height: 166rpx;
}

.chooseImg {
    width: 70rpx;
    height: 70rpx;
    padding: 40rpx;
}

.Prompts {
    width: 150rpx;
    height: 150rpx;
	line-height: 150rpx;
    text-align: center; 
    font-size: 8pt;
}

.deletImg {
    position: absolute;
    right: 8rpx;
    top: 8rpx;
    z-index: 100;
    width: 30rpx;
    height: 30rpx;
    padding: 0 0 10rpx 10rpx;
}

.shaitu {
    padding-left: 10rpx;
	font-size: 9pt;
}

.comment_center_f text {    
    color: #999;
}

.add {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    background: #cb2527;
    border-radius: 10rpx 10rpx;
    position: relative;
    bottom: 0;
    color: #fff;
    font-size: 12pt;
    text-align: center;
	margin-top:50rpx;
}