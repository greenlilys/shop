page {
    background: #eee;
}

.top {
    width: 90%;
    padding: 30rpx 5%;
    background: #cc3431;
    color: #fff;
}

.top-t {
    width: 100%;
    display: block;
    font-size: 12pt;
    margin: 0 0 5% 0;
}

.top-c {
    width: 100%;
    height: 80rpx;
    display: block;
    border-bottom: 2rpx solid #fff;
}

.top-c text {
    font-size: 26pt;
    display: block;
    float: left;
}

.top-c navigator {
    float: right;
}

.top-c navigator text {
    font-size: 12pt;
    float: left;
}

.top-c navigator image {
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin-left: 20rpx;
}

.top-f {
    width: 100%;
    display: block;
    font-size: 12pt;
    margin-top: 20rpx;
}

.center {
    width: 90%;
    height: 400rpx;
    padding: 30rpx 5%;
    background: #fff;
    border-bottom: 2rpx dashed #ddd;
}

.center-list {
    width: 44%;
    height: 160rpx;
    margin: 2% 0 3% 5%;
    float: left;
    border-right: 2rpx solid #ddd;
}

.center-list .center-price {
    font-size: 26pt;
    color: #666;
}

.center-list .center-f {
    font-size: 11pt;
    color: #999;
}

.center-right {
    border-right: 0;
}

.center-list text {
    display: block;
    font-size: 12pt;
    margin-top: 10rpx;
    color: #333;
}

.fot {
    width: 90%;
    padding: 20rpx 5%;
    font-size: 11pt;
    color: #999;
    background: #fff;
}

.fot-zhuyi {
    margin-top: 40rpx;
    display: block;
}

.fot-color {
    color: #cc3431;
}

.tijiao button {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    letter-spacing: 3rpx;
    text-align: center;
    margin: 50rpx auto;
    border-radius: 10rpx 10rpx;    
    font-size: 14pt;
     color: #fff; 
}

