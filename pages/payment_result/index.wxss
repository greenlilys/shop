/* pages/payment_result/index.wxss */

.container {
    width: 100%;
    height: 100%;
    background: #fff;
}

page {
    height: 100%;
}

.prompt {
    height: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #f0f0f0;
}

.prompt text:nth-of-type(1) {
    padding-top: 10rpx;
}

.prompt text:nth-of-type(2) {
    padding-top: 20rpx;
}

.firmContent {
    width: 100%;
	 border-bottom: 1rpx solid #f0f0f0;
	padding:20rpx 0;
}

.firmContent text {
    display: block;
    font-size: 10pt;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 30rpx;

}
.container button{
	width:90%;
	height:80rpx;
	line-height: 80rpx;
	margin:0 auto;
	margin-top:60rpx;
	text-align:center;
}
.container button:nth-of-type(2){
	margin-top:30rpx;
}


