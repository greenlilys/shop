page {
    height: 100%;
}

/*总体主盒子*/

.container {
    position: relative;
    width: 100%;
    height: 100%;
    background: #fff;
    color: #939393;
}

/*左侧栏主盒子*/

.nav_left {
    position: absolute;
    top: 0;
    left: 0;
    width: 25%;
    height: 100%;
    background: #f5f5f5;
}

/*左侧栏list的item*/

.nav_left .nav_left_items {
    height: 79rpx;
    width: 100%;
    line-height: 79rpx;
    border-bottom: 1rpx solid #fff;
    font-size: 10pt;
    color: black;
    text-align: center;
    background: #f5f5f5;
}

.nav_left view {
    height: 80rpx;
}

/*左侧栏list的item被选中时*/

.nav_left .nav_left_items.active {
    background: #fff;
    color: #f0145a;
    height: 80rpx;
    line-height: 79rpx;
}

/*右侧栏主盒子*/

.nav_right {
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    width: 75%;
    height: 100%;
}

/*右侧栏list的item*/

.nav_right .nav_right_items {
    float: left;
    width: 33.33%;
    height: 240rpx;
    text-align: center;
}

.nav_right .nav_right_items image {
    width: 100rpx;
    height: 100rpx;
    margin-top: 30rpx;
}

.nav_right .nav_right_items text {
    display: block;
    margin-top: 20rpx;
    font-size: 10pt;
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.nodata_text {
    color: black;
    font-size: 10pt;
    text-align: center;
}
