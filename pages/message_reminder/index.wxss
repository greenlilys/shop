.message_top{
    width: 100%;
    height:80rpx;
    background: #f9f9f9;
    text-align: center;
}
.message_top image{
    width: 50rpx;
    height: 50rpx;
    float: left;
    margin:15rpx 0 0 40rpx;
}
.message_top text{
    line-height: 80rpx;
    font-size: 12pt;
    color: #333;
}
.message_shop{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #f0f0f0;
}
.message_shop text{
    font-size: 13pt;
    color: #333;
    margin-left: 40rpx;
    text-align: center;
}
.message_list{
    width: 90%;
    height:90rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #ddd;
}
.message_list text{
    float: left;
    font-size: 12pt;
    color: #333;
    line-height:90rpx;
}
.body-view{
    float: right; 
}
.body-view switch{
    margin-top:15rpx;
}