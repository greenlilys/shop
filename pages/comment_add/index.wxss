page {
    background: #efefef;
}
.comment_top{
    width: 100%;
    height:220rpx;
    background: #FFF;
    margin: 20rpx 0;
}
.comment_tops{
    width: 90%;
    margin:0 auto;
    height: 150rpx;
    padding:20rpx 0;
    border-bottom: 2rpx solid #ddd;
}
.comment_tops_l{
    width: 150rpx;
    height: 150rpx;
    float: left;
}
.comment_tops_l image{
    width: 150rpx;
    height: 150rpx;
}
.comment_tops_c{
    width:40%;
    float: left;
    margin: 20rpx 0 0 40rpx;
}
.comment_tops_c text{
    display: block;
    font-size: 11pt;
    color: #999;
    margin: 10rpx 0 20rpx 0;
}
.comment_tops_c .comment_tops_title{
    font-size: 13pt;
    color: #333;
}
.comment_tops_r{
    float: right;
    margin-top:10rpx;
}
.comment_tops_r text{
    display: block;
    text-align: right;
    font-size: 12pt;
    color: #666;
    margin-top:15rpx;
}
.comment_center{
    width: 100%;
    height:500rpx;
    padding: 20rpx 0;
    background: #FFF;
}
.comment_center_c{
    width: 90%;
    height: 180rpx;
    margin: 20rpx auto;
    border: 2rpx solid #ddd;
    border-radius: 10rpx 10rpx;
}
.comment_center_c input{
    font-size: 11pt;
    color: #999;
    margin: 10rpx 0 0 20rpx;
}
.comment_center_f{
    width: 90%;
    height: 100rpx;
    margin: 0 auto;
    border: 2rpx solid #ddd;
    border-radius: 10rpx 10rpx;
}
.comment_center_f text{
    font-size: 11pt;
    color: #999;
    float: left;
    margin:35rpx 0 0 20rpx;
}
.comment_center_f image{
    float: right;
    width:80rpx;
    height:80rpx;
    margin: 10rpx 10rpx 0 0;
}
.comment_bt{
    width: 90%;
    margin:50rpx auto;
}
.comment_bt button{
    background: #fa495d;
    font-size: 13pt;
}