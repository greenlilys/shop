/* pages/area/index.wxss */
.container {
    background: #efefef;
	width:100%;
}
page {
    width:100%;
}

.modBox {
    width:90%;
    margin: 0 auto;
    overflow: hidden;
    padding-bottom:30rpx;
}
.modules {
    background: #fff;
    width: 750rpx;
}


.add {
    width: 100%;
    background: #fff;
}

.sq-title {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    height:120rpx;
    line-height: 120rpx;
}

.sq-title image {
    width:8%;
    margin:10rpx 20rpx 0 5%;
}

.sq-title .title {
    font-size:14.5pt;
    color: #000;
    margin-top:10rpx;
}

.sq-title .more {
    position: absolute;
    right:40rpx;
    font-size: 12pt;
    color: #666;
}
.pro-list {
    width:42%;
    float: left;
    margin:2% 3% 3% 3%;  
    border:2rpx solid #e5e5e5;
}

.pro-list navigator image {
    width: 100%;
}

.pro-list .pro-name {
    font-size: 11pt;
    color: #666;
    margin: 0 5%;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

.price {
    color: #cb2527;
    font-size: 10pt;
    margin: 3% 5%;
}
.loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.loadmore_tips {
    display: inline-block;
    vertical-align: middle;
}
.dixian{
	font-size:9pt;
	
	color:#999;
	padding-bottom:30rpx;
	text-align:center;
}