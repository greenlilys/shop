page {
    background: #efefef;
}
.recharge{
    width: 100%;
    background: #FFF;
}
.recharge_top{
    width:100%;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
    border-bottom: 2rpx #ddd solid;
}
.recharge_title{
    font-size: 13pt;
    color: #666;
    float: left;
    margin:0 20rpx 0 40rpx;
}
.recharge_top .recharge_price{
    font-size: 12pt;
    color: #999;
}
.recharge_center{
    width:100%;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
}
.recharge_center input{
    float: left;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 12pt;
}
.recharge_fot{
    width: 90%;
    height:180rpx; 
    margin: 80rpx auto;
}
.recharge_fot button{
    margin-top:20rpx;
    height:60rpx;
    border: 0;
    line-height: 60rpx;
    font-size: 13pt;
}
.recharge_fot .login-jilu{
    background: #ead354;
}