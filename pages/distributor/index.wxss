    border-radius: 10rpx 10rpx;
    background: #cb2527;
    margin: 0 auto;
}

.cart-img {
    width: 50rpx;
    height: 50rpx;
    float: left;
    margin: 15rpx 20rpx 0 35%;
}

.shop {
    float: left;
    color: #fff;
    font-size: 13pt;
