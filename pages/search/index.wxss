page {
  height: 100%;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
}

.filter-item {
  display: inline-block;
  height: 70rpx;
  line-height:70rpx;
  background: #f6f6f6;
  padding: 0 20rpx;
  border-radius:6rpx;
  font-size: 12pt;
  width:106rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.filter-title {
  font-size: 12pt;
  color: #999;
  margin-bottom:20rpx;
}

.filter-cate {
  margin-bottom:40rpx;
}

.filter-location {
  margin-bottom:20rpx;
}

.filter-location .location {
  background: #fff;
  color: #999;
}

.filter-location .active, .filter-cate .active {
  background: #f95d5d;
  color: #fff !important;
}

.side-page {
  width: 540rpx;
  height: 100%;
  background: #fff;
  position: fixed;
  right: -540rpx;
  top: 0;
  z-index: 10;
}

.side-page .filter-wrap {
  height: calc(100% - 60px);
  width: calc(100% - 20px);
  padding:20rpx;
}

.side-page .button-wrap {
  height:80rpx;
}

.side-page .button-wrap view {
  height:80rpx;
  text-align: center;
  line-height:80rpx;
  float: left;
  width: 50%;
}

.cancel-btn {
  background: #f6f6f6;
  color: #999;
}

.confirm-btn {
  background: #f95d5d;
  color: #fff;
}

.active {
  color: #f95d5d !important;
}

.active .sub-active {
  color: #f95d5d !important;
}

.locate {
  float: left;
  width: 22%;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 13pt;
}

.comp-search {
  width: 96%;
  height:100rpx;
  line-height:100rpx;
  overflow: hidden;
  background: #fff;
  padding: 0 2%;
  border-bottom: 2rpx solid #f6f6f6;
}

.search-wrap {
  height:60rpx;
  width: 98%;
  background: #efeff4;
  border-radius:50rpx 50rpx;
  position: relative;
  vertical-align: middle;
  float: left;
  margin-top: 15rpx;
}

.search-wrap input {
  height:60rpx;
  line-height:60rpx;
  padding-left: 10rpx;
  font-size:11pt;
}

.search-wrap icon {
  margin-left: 20rpx;
  height: 100%;
  vertical-align: middle;
  float: left;
}

.cancel {
  padding: 0;
  height: 50rpx;
  width: 14%;
  line-height: 50rpx;
  margin-top: 15rpx;
  font-size:13pt;
}

.cross {
  height:35rpx;
  background: #dcdcdc;
  color: #fff;
  line-height:35rpx;
  text-align: center;
  display: inline-block;
  position: absolute;
  width:35rpx;
  top: 12rpx;
  right:20rpx;
  border-radius: 50%;
  font-size: 12pt;
  font-weight: bold;
  z-index: 9;
}

.filter {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:2rpx solid #f6f6f6;
  overflow: hidden;
  width: 100%;
}

.tab {
  width: 20%;
  float: left;
  text-align: center;
  font-size:13pt;
}

.tab-price {
  position: relative;
}

.tab-price .up, .tab-price .down {
  color: #dcdcdc;
  position: absolute;
  right: 5rpx;
  height:20rpx;
  overflow: hidden;
  line-height:20rpx;
  transform: scaleY(0.6);
  text-align: center;
}

.tab-price .up {
  top: 20rpx;
}

.tab-price .down {
  bottom: 20rpx;
}

/*样式1*/

.container {
  height: calc(100% - 164rpx);
}

.container .item {
  height:240rpx;
  overflow: hidden;
  padding:10rpx 20rpx;
  border-bottom:2rpx solid #f6f6f6;
}

.container .item-pic {
  height:200rpx;
  width:200rpx;
  float: left;
  margin-top: 20rpx;
  /* padding:6rpx; */
}

.container .item-detail {
  position: relative;
  float: left;
  width: calc(100% - 140px);
  height:200rpx;
  margin-left:20rpx;
  /* border-bottom:2rpx solid #f6f6f6; */
}

.container .item-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  margin:25rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12pt;
  color: #333;
  min-height: 74rpx;
  line-height:45rpx;
}

.container .item-price {
  display: inline-block;
  font-size: 14pt;
  color: #f95d5d;
}

.container .item-price text {
  font-size:14pt;
}

.container .item-buy {
  height:60rpx;
  width:60rpx;
  color: #f95d5d;
  position: absolute;
  right: 20rpx;
  bottom:20rpx;
  font-size:20pt;
  line-height:60rpx;
  text-align: center;
}

.container .item-sales {
  color: #999;
  font-size:12pt;
  margin-left:20rpx;
}

/*样式1*/

.colume-2 {
  height: calc(100% - 164rpx);
  background: #f6f6f6;
}

.colume-2 .item {
  height: 570rpx;
  overflow: hidden;
  width: 49%;
  float: left;
  background: #fff;
  margin-bottom: 2%;
}

.colume-2 .item:nth-child(odd) {
  margin-right: 2%;
}

.colume-2 .item-pic {
  height: 360rpx;
  width: 100%;
  float: left;
  display: block;
}

.colume-2 .item-detail {
  position: relative;
  float: left;
  width: calc(100% - 20rpx);
  height: 210rpx;
  padding: 0 10rpx;
}

.colume-2 .item-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:15pt;
  min-height: 80rpx;
}

.colume-2 .item-price {
  font-size: 13pt;
  color: #f95d5d;
  margin-right: 15rpx;
}

.colume-2 .item-price text {
  font-size: 16pt;
}

.colume-2 .item-buy {
  height: 60rpx;
  width:60rpx;
  color: #f95d5d;
  position: absolute;
  right: 0;
  bottom: 10rpx;
  font-size:20pt;
  line-height:60rpx;
  text-align: center;
}

.colume-2 .item-sales {
  color: #999;
  font-size:13pt;
}

