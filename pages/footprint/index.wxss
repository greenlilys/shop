page {
    background: #efefef;
}

.collect_top {
    width: 90%;
	margin:0 auto;
    height: 100rpx;
    border-bottom: 2rpx solid #ddd;
    font-size: 13pt;
	display:flex;
	flex-direction:row;
	align-items:center;
	justify-content:space-between;
}

.collect_topl {
    float: left;
}

.collect_topl text {

    float: left;
}

.collect_topr {
    float: right;
    
    border: 2rpx solid #ddd;
    border-radius: 10rpx 10rpx;
    background: #fff;
    padding: 8rpx 20rpx;
}

.checkbox {
    width: 90%;
    padding: 0 5%;
    display: block;
    float: left;
    height: 100%;
    border-bottom: 2rpx solid #ddd;
    background: #fff;
}

.collect_list_center {
    height: 210rpx;
    float: left;
    padding-top: 28rpx;
    padding-bottom: 28rpx;
    overflow: hidden;
}

.collect_list_center image {
    width: 200rpx;
    height: 200rpx;
    float: left;
    margin: 0 20rpx 0 10rpx;
}

.collect_list_centerc text {
    font-size: 12pt;
    color: #f10b2e;
}

.collect_list_centerc {
    float: right;
    height: 200rpx;
}

.collect_list_centerc .collect_center_title {
    height: 156rpx;
    width: 380rpx;
}

.collect_list_centerc .collect_center_title text {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 10pt;
    color: #666;
	
}

.priceBox .collect_line {
    text-decoration: line-through;
    color: #999;
    font-size: 11pt;
    margin-left: 10rpx;
    float: right;
}

.priceBox .nowPrice {
    float: left;
    height: 44rpx;
    line-height: 44rpx;
}

.priceBox {
    /* padding-top:30rpx; */
    overflow: hidden;
}

.collect_delete {
    margin: 100rpx 0 0 20rpx;
    float: right;
}

.collect_delete image {
    width: 50rpx;
    height: 50rpx;
    float: right;
}

.loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.loadmore_tips {
    display: inline-block;
    vertical-align: middle;
}
