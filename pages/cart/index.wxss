page {
    background: #f8f8f8;
}

.cart-head {
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 5%;
    border-bottom: 2rpx solid #ddd;
}

.cart-head-left {
    float: left;
    font-size: 12pt;
    color: #666;
}

.cart-head-right {
    float: right;
    font-size: 12pt;
    color: #666;
}

.cart-head-right text {
    padding: 10rpx 20rpx;
    border: 2rpx solid #ddd;
    border-radius: 12rpx 12rpx;
    background: #fff;
    margin: 0 10rpx;
}

.cart-box .item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx;
    background: #fff;
    justify-content: space-between;
    border-bottom: 1px solid #ddd;
}

.cart-box .item .goods-info {
	width: 440rpx;
    height: 160rpx;
	 display:flex; 
	 flex-direction: column; 
	 justify-content: space-between; 
}
.priceBox{
		 display:flex; 
	 flex-direction: row; 
	 justify-content: space-between; 
}
.cart-box .goods-img {
    width: 160rpx;
    height: 160rpx;
    display: inline-block;
}

.cart-box .goods-name {
    
    font-size: 11pt;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

.goods-price {
    font-size: 11pt;
    color: #E43A3D;
}

.cart-box .goods-type {
    width: 100%;
    color: #999;
    font-size: 10pt;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

.cart-box .num-box {    
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.cart-box .goods-btn {
    width: 50rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;    
    color: #666;
    margin: 0;
    background: #eee;
	font-size: 12pt;
}

.cart-box .num {
    color: #666;
    width: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 10pt;
}

.cart-box .btn-groups {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    border: 2rpx solid #ddd;
    border-radius: 10rpx;
}

.cart-fixbar {
    position: fixed;
    bottom: 0;
    background: #eee;
    height: 120rpx;
    width: 90%;
    padding: 0 5%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.cart-fixbar .allSelect {
    display: flex;
    flex-direction: row;
    height: 120rpx;
    align-items: center;
    color: #333;
    font-size: 12pt;
}

.cart-fixbar .allSelect-text {
    margin-left: 20rpx;
}

.cart-fixbar .count {
    margin-left: 80rpx;
    color: #333;
    font-size: 13pt;
}

.cart-fixbar .order {
    color: #fff;
    height: 80rpx;
    background: #e43a3d;
    line-height: 80rpx;
    position: absolute;
    right: 5%;
    padding: 0 30rpx;
    font-size: 13pt;
    border-radius: 12rpx 12rpx;
}
.order.disabled{
    background-color: #999;
}

.cart-fixbar .allnum {
    font-size: 24rpx;
}

.loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.loadmore_tips {
    display: inline-block;
    vertical-align: middle;
}

.dixian {
    font-size: 9pt;
    margin-top: 30rpx;
    color: #999;
    padding-bottom: 30rpx;
}
