.curr {
    width: 650rpx;
    padding: 20rpx 50rpx 20rpx 50rpx;
    margin: 0rpx auto;
    margin-bottom: 10rpx;
    background: #fff;
}

page {
    background: #f5f5f5;
}

.curr-title {
    font-size: 12pt;
    color: #666;
    display: block;
}

.order-add1 {
    font-size: 10pt;
    width: 100%;
    color: #999;
    margin-top: 25rpx;    
    
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
}

.address-cz {
    width: 100%;
    height: 50rpx;
    font-size: 10pt;
    color: #666;
    margin-top: 15rpx;
	padding-top:15rpx;
	border-top: 1rpx solid #f5f5f5;
	  display: flex;
    flex-direction: row;
    align-items: center;
}

.address-cz .radio {
    float: left;
    width: 38%;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.radio .default {
    margin-left: 8rpx;
}

.bianji {
    width: 35%;
    float: left;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
}

.bianji-img {
    width: 30rpx;
    height: 30rpx;
    float: left;
    margin-right: 8rpx;
}

.bianji text {
    float: left;
}

.dele {
    float: left;
    margin-left: 20rpx;
}


.add {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    background: #cb2527;
    border-radius: 10rpx 10rpx;
    position: relative;
    bottom: 0;
    color: #fff;
    font-size: 12pt;
    text-align: center;
    margin-top: 50rpx;
}
